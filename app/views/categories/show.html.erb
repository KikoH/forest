	<h2> <%= @category.name %> </h2>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
			</tr>
		</thead>
		<% @category.products.each do |pro| %>
		<tbody>
			<tr>
				<td> <%= pro.name %> </td>
				<td> <%= pro.description %> </td>
				<td> <%= pro.price_in_cents %>$ </td>
			</tr>
		</tbody>
		<% end %>
	</table>

	<%= link_to "Delete", @category, method: :delete, data: {confirm: "Are you sure you want to delete this category?"} %>

	<%= link_to 'Back to Main Page', products_path %>