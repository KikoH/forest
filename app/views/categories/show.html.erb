	<h2> <%= @category.name %> </h2>

	<% @category.products.each do |pro| %>
	<ol>
		<li> <%= pro.name %> </li>
			<ul>
				<li> <%= pro.description %> <%= pro.price_in_cents %>$ </li>
			</ul>
	</ol>
	<% end %>

	<%= link_to "Delete", @category, method: :delete, data: {confirm: "Are you sure you want to delete this category?"} %>

	<%= link_to 'Back to Main Page', products_path %>