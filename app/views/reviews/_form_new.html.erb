<h4>New Review</h4>

<% if current_user %>
	<%= form_for [@product, @review], :remote => true do |f| %>
		<%= render :partial => 'reviews/review_form_errors' %>

		<div class="field">
		  <%= f.label :comment %><br />
		  <%= f.text_area :comment %>
		</div>

		<div class="actions">
		  <%= f.submit %>
		</div>
	<% end %>

<% else %>
	<p>Please <%= link_to "log in", new_session_path %> to add a review.</p> 
<% end %>