<div id="review-list">
	<h3>Reviews</h3>
	
	<div id="poster">
		<p>Reviews for <%= @product.name %></p>
	</div>	
	<% @product.reviews.newest_first.each do |review| %>
	<p>
		<%= review.comment %>
		<br>
		<% if review.user != nil %>
		<em> by <%= link_to review.user.email, user_url(review.user) %></em>
		Added on: <%= review.created_at %>
		<% end %>
	</p>
	<% end %>
</div>